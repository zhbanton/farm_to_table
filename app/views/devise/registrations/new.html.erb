<h2>Sign up</h2>

<%
  if params.has_key?(:user) && params[:user].has_key?(:user_type) && User::USER_TYPES.include?(params[:user][:user_type].downcase)
    user_type = params[:user][:user_type].downcase
  else
    user_type = "farm"
  end

  resource.rolable = user_type.camelize.constantize.new if resource.rolable.nil?
%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= my_devise_error_messages! %>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :website %><br />
    <%= f.url_field :website %>
  </div>

  <div>
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number %>
  </div>

  <%= hidden_field :user, :user_type, value: user_type %>

  <div>
    <%= fields_for resource.rolable do |rf| %>
      <% render "#{user_type}_fields", f: rf %>
    <% end %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
