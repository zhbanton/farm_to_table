<h3>Active Postings</h3>
<% if @farm.active_postings.present? %>
  <%= render 'shared/postings_list', postings: @farm.active_postings %>
<% else %>
  <p>You don't have any active postings.</p>
<% end %>

<h3>Past Postings</h3>
<% if @farm.inactive_postings.present? %>
  <%= render 'shared/postings_list', postings: @farm.inactive_postings %>
<% else %>
  <p>You don't have any past postings.</p>
<% end %>
