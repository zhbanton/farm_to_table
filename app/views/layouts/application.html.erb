<!DOCTYPE html>
<html>
<head>
  <title>FarmToTable</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <% if current_user.role_type == 'Farm' %>
    <%= render 'navbars/farm_nav' %>
  <% elsif current_user.role_type == 'Organization' %>
    <%= render 'navbars/organization_nav' %>
  <% end %>
<% else %>
  <%= link_to 'sign in', new_user_session_path %> |
  <%= link_to 'sign up as a farm', farm_sign_up_path %> |
  <%= link_to 'sign up as an organization', organization_sign_up_path %>
<% end %>

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
