<table class="table table-striped">
  <tr>
    <% if params[:action] == 'index' %>
      <th>PRODUCT</th>
    <% end %>
    <th>STARTING QUANTITY</th>
    <th>QUANTITY REMAINING</th>
    <th>PRICE PER UNIT</th>
    <th>POST DATE</th>
    <th>EXPIRATION DATE</th>
    <th>TOTAL VALUE</th>
  </tr>
  <% postings.each do |posting| %>
  <tr>
    <% if params[:action] == 'index' %>
      <td><%= link_to name_and_variety_to_s(posting.product), farm_product_path(posting.product.farm, posting.product) %></td>
    <% end %>
    <td><%= quantity_to_s(posting) %></td>
    <td><%= "#{posting.quantity_remaining} #{posting.unit.pluralize}" %></td>
    <td><%= number_to_currency(posting.price_per_unit) %></td>
    <td><%= posting.starting_date %></td>
    <td><%= posting.expiration_date %></td>
    <td><%= number_to_currency(posting.total_value) %></td>
  </tr>
  <% end %>
</table>
